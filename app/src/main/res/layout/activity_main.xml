<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#213541"
    android:descendantFocusability="afterDescendants"
    tools:context=".Main_y_category.MainActivity">

    <ImageView
        android:id="@+id/buscador"
        android:layout_width="76dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="@+id/btn_navegador"
        app:layout_constraintEnd_toEndOf="@+id/btn_favoritas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_navegador"
        app:layout_constraintTop_toTopOf="@+id/btn_navegador"
        app:layout_constraintVertical_bias="0.454"
        app:srcCompat="@drawable/aa" />

    <Button
        android:id="@+id/btn_favoritas"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="@string/favorites"
        app:layout_constraintEnd_toEndOf="@+id/btn_ecua"
        app:layout_constraintStart_toStartOf="@+id/btn_ecua"
        app:layout_constraintTop_toBottomOf="@+id/btn_ecua" />


    <Button
        android:id="@+id/btn_ecua"
        android:layout_width="361dp"
        android:layout_height="61dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:onClick="onClick"
        android:text="@string/equations"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_navegador"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:text="@string/search_google"
        app:layout_constraintEnd_toEndOf="@+id/btn_favoritas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_favoritas"
        app:layout_constraintTop_toBottomOf="@+id/btn_favoritas" />

    <ImageButton
        android:id="@+id/btn_QR"
        android:layout_width="134dp"
        android:layout_height="121dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/img"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buscador"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/btn_navegador"
        app:layout_constraintTop_toBottomOf="@+id/btn_navegador"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/add_qr" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="234dp"
        android:layout_marginLeft="234dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="234dp"
        android:layout_marginRight="234dp"
        android:text="@string/titleAppFormulas"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="@font/architects_daughter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>